<!-- Bootstrap JS with Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Include SweetAlert CSS and JS files -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.2.0/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.2.0/dist/sweetalert2.all.min.js"></script>

<button id="cancelOrderBtn">Cancel Order</button>

<script>
    document.getElementById('cancelOrderBtn').addEventListener('click', function() {
      showCancelOrderAlert();
    });
  
    function showCancelOrderAlert() {
      const reasons = ['Changed mind', 'Found a better price', 'Product out of stock', 'Shipping delays', 'Incorrect item ordered', 'Duplicate order', 'Defective product', 'Dissatisfied with product', 'Unhappy with service', 'Other'];
  


      
      Swal.fire({
        title: 'Select Cancelation Reason',
        input: 'select',
        inputOptions: Object.fromEntries(reasons.map(reason => [reason, reason])),
        inputPlaceholder: 'Select a reason',
        showCancelButton: true,
        cancelButtonText: 'Cancel',
        confirmButtonText: 'Submit',
        inputValidator: (value) => {
          return new Promise((resolve) => {
            if (value === '') {
              resolve('You need to select a reason');
            } else {
              resolve();
            }
          });
        }
      }).then((result) => {
        if (result.isConfirmed) {
          const selectedReason = result.value;
          // Perform the cancellation or further actions based on the selected reason
          // You can add additional logic here
          Swal.fire('Cancelled!', `Order cancelled due to: ${selectedReason}`, 'success');
        }
      });
    }
  </script>
  