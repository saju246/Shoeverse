<% if (locals.messages) { %>
    <div class="flash-messages">
      <% Object.keys(messages).forEach((key) => { %> <%
      messages[key].forEach((message) => { %>
      <div class="alert alert-<%= key !== `error` ? key : `danger` %> fade show" id="flash-message"  role="alert"  >
        <strong><%= key === "danger" ? "Error" : key %>!</strong> <%= message %>.
      </div>
      <% }) %> <% }) %>
    </div>
    <% } %>
    <style>
      .flash-messages {
        margin-bottom: 10px;
      }
    
      .alert {
        margin-bottom: 10px;
        opacity: 0;
        transition: opacity 0.5s;
      }
    
      .alert.show {
        opacity: 1;
      }
    
      .alert button.close {
        position: relative;
        top: -2px;
      }
    
      .alert-danger {
        background-color: #f44336;
        color: white;
      }
    
      .alert-success {
        background-color: #87c689;
        color: white;
      }
    
      /* Additional styles for other message types */
      .alert-info {
        background-color: #3498db;
        color: white;
      }
    
      .alert-warning {
        background-color: #f39c12;
        color: white;
      }
    </style>