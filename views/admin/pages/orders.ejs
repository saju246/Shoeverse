

<!-- Add jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>


<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Order List </h2>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive">


                <table style="width: 100%;"  id="productTable" class="table table-striped table-bordered table-sm"
                    cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Order ID</th>
                            <th>Shipping Details</th>
                            <th>Date</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (orders.length > 0) { %>
                            <% orders.forEach((order, index) => { %>
                                <tr>
                                    <td class="align-middle"><%= index + 1 %></td>
                                    <td class="align-middle"><%= order.orderId %></td>
                                    <td class="align-middle">
                                        <%= order.shippingAddress %>, <%= order.town %>, <%= order.state%><%= order.postCode %>
                                    </td>
                                    <td class="align-middle">
                                        <%= new Date(order.orderedDate).toLocaleDateString('en-US', { year: 'numeric', month:
                                        'long', day: 'numeric' }) %>
                                    </td>
                                    <td class="align-middle"><%= order.totalPrice.toFixed(2) %></td>
                                    <td class="align-middle">
                                        <a class="btn btn-sm btn-primary" href="/admin/orders/<%= order.orderId %>">Details</a>
                                    </td>
                                </tr>
                                <% }) %>
    
                        <% } else { %>
                            <tr>
                                <td colspan="7">
                                    <h2>NO Orders yet</h2>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $("#productTable").DataTable();
    });
  </script>